<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container mt-5">
    <form action="/nuevousuario" method="post" enctype="multipart/form-data">
      <div class="card">
          <div class="card-header">
              <h3>Nuevo Usuario</h3>
          </div>
          <div class="card-body">
              <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus autocomplete="name">
              <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario">
              <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password" autocomplete="current-password">
              <input class="form-control mb-3" type="number" name="edad" id="edad" placeholder="edad">
              <input class="form-control mb-3" type="file" name="foto" id="foto" >
          </div>
          <div class="card-footer">
              <button class="form control btn btn-success" type="submit">Guardar</button>
          </div>
        </div>
    </form>
  </div>