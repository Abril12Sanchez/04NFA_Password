<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container mt-5">
    <form action="/login" method="post">
        <div class="card">
            <div class="card-header">
                <h3>INICIAR SESIÓN</h3>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario">
                <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password" autocomplete="current-password">
            </div>
            <div class="card-footer">
                <button class="form control btn btn-success" type="submit">ENTRAR</button>
            </div>
        </div>
    </form>

    <!-- Opción de registro y recuperación de contraseña -->
    <div class="mt-3 text-center">
        <a href="/registro" class="btn btn-primary">Registrar un nuevo usuario</a>
        <a href="/recuperar-contraseña" class="btn btn-secondary">¿Olvidaste tu contraseña?</a>
    </div>
</div>
