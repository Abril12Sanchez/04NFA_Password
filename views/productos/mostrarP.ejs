<%- include("../templates/encabezado")%>
 <%- include("../templates/menu")%>
 <div class="container mt-5"> <!--deja margintop de 5 siendo el mayor -->
  <div class="card">
    <div class="card-header" style="background-color:rgb(199, 130, 255)">
      <h3>PRODUCTOS</h3>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <th>id</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Descripcion</th>
          <th>Foto</th>
          <th>Editar</th>
          <th>Borrar</th>
        </thead>
        <tbody>
          <% productos.forEach((producto) => { %>
          <tr>
            <td><%= producto.id %></td>
            <td><%= producto.nombre %></td>
            <td><%= producto.precio %></td>
            <td><%= producto.cantidad %></td>
            <td><%= producto.descripcion %></td>
            <td><img src="/images/<%= producto.foto %>" alt="Foto de: <%= producto.nombre %>" height="80px" width="80px"></td>

            
            <td>
              <a href="/producto/producto/editarP/<%= producto.id %>" class="btn btn-warning">
                <i class="bi bi-pen-fill"></i>
              </a>
              
            </td>
            <td> 
              <a
                href="/producto/borrarP/<%= producto.id %>"
                class="btn btn-danger"
                ><i class="bi bi-trash3-fill"></i
              ></a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

