<%- include("../templates/encabezado")%> <%- include("../templates/menu")%>
<div class="container mt-5">
  <form action="/producto/nuevoproducto" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Producto</h3> 
        </div>
        <div class="card-body">
            <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus autocomplete="name">
            <input class="form-control mb-3" type="number" name="precio" id="precio" placeholder="Precio">
            <input class="form-control mb-3" type="number" name="cantidad" id="cantidad" placeholder="Cantidad" autocomplete="current-password">
            <input class="form-control mb-3" type="text" name="descripcion" id="descripcion" placeholder="Descripcion">
            <input class="form-control mb-3" type="file" name="foto" id="foto" >
          </div>
        <div class="card-footer">
            <button class="form control btn btn-success" type="submit">Guardar Producto</button>
        </div>
      </div>
  </form>
</div>
